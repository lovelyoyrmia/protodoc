<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{.Name}}</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.52.0/swagger-ui.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f6f6f6;
      }
      .api-doc-container {
        margin: 20px;
      }
      .api-header {
        background-color: #323232;
        color: white;
        padding: 20px;
        border-radius: 5px;
      }
      .api-header h1 {
        margin: 0;
      }
      .method {
        border: 1px solid #e6e6e6;
        background-color: white;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
      }
      .method h4 {
        font-weight: bold;
      }
      .method-path {
        font-family: monospace;
        background-color: #f0f0f0;
        padding: 5px;
        border-radius: 3px;
      }
      .method-type {
        padding: 2px 6px;
        border-radius: 3px;
        color: white;
        margin-right: 10px;
      }
      .method-type.GET {
        background-color: #61affe;
      }
      .method-type.POST {
        background-color: #49cc90;
      }
      .method-type.PUT {
        background-color: #fca130;
      }
      .method-type.DELETE {
        background-color: #f93e3e;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }
      table,
      th,
      td {
        border: 1px solid #ddd;
      }
      th,
      td {
        padding: 8px;
      }
      th {
        background-color: #f9f9f9;
      }
    </style>
  </head>
  <body>
    <div class="api-doc-container">
      <div class="api-header">
        <h1>{{.Name}}</h1>
        <p>Author: {{.Author}}</p>
        <p>Base URL: <strong>{{.BaseUrl}}</strong></p>
      </div>

      <hr />

      <h2>Services</h2>
      {{range .Services}}
      <div class="service">
        <h3>{{.Name}}</h3>
        {{range .Methods}}
        <div class="method">
          <h4>{{.Name}}</h4>
          <span class="method-type {{.Method}}">{{.Method}}</span>
          <span class="method-path">{{.Path}}</span>
          <p>{{.Description}}</p>

          <h5>Request</h5>
          <p><strong>Input Type:</strong> {{.InputType}}</p>

          <h5>Response</h5>
          <p><strong>Output Type:</strong> {{.OutputType}}</p>

          {{if .QueryParams}}
          <h5>Query Parameters</h5>
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Required</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              {{range .QueryParams}}
              <tr>
                <td>{{.Name}}</td>
                <td>{{.Type}}</td>
                <td>{{if .Required}}Yes{{else}}No{{end}}</td>
                <td>{{.Description}}</td>
              </tr>
              {{end}}
            </tbody>
          </table>
          {{else}}
          <p><em>No query parameters for this method.</em></p>
          {{end}}
        </div>
        {{end}}
      </div>
      {{end}}

      <hr />

      <h2>Messages</h2>
      {{range .Messages}}
      <div class="message">
        <h3>{{.Name}}</h3>
        <h5>Fields</h5>
        <table>
          <thead>
            <tr>
              <th>Field Name</th>
              <th>Type</th>
            </tr>
          </thead>
          <tbody>
            {{range .Fields}}
            <tr>
              <td>{{.Name}}</td>
              <td>{{.Type}}</td>
            </tr>
            {{end}}
          </tbody>
        </table>
      </div>
      {{end}}
    </div>
  </body>
</html>
